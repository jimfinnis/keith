[`udp,"../control/build/rover"] each {i library drop}
require "../control/common.ang"

init

31222 # server port 
"" 0 udp$start

`speedl udp$addvar 
`speedr udp$addvar 

( dup "L" p .
    dup 0!rover$speed 2!rover$speed
) `speedl udp$onchange
    
( dup "R" p .
    dup 1!rover$speed 3!rover$speed
) `speedr udp$onchange

(
    {
        udp$poll
        0.1 time$delay
    }
)@

